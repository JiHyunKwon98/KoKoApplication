<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/backImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/arrow_back"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backImageView"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:text="회원가입"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backImageView"
        app:layout_constraintTop_toBottomOf="@id/backImageView" />

    <TextView
        android:id="@+id/signDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signTextView"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:text="가입을 위한 정보를 입력해주세요!"
        android:textColor="#C8C8C8"
        android:textSize="15sp" />

    <!-- 이메일 입력 -->
    <RelativeLayout
        android:id="@+id/emailRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signDetailTextView"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:text="이메일"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/emailText"
            app:layout_constraintTop_toTopOf="@+id/emailText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmail"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp" />

        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <!-- PW 입력 -->
    <RelativeLayout
        android:id="@+id/pwRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailRelative">

        <TextView
            android:id="@+id/pwText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:text="PW"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPw"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pwText"
            app:layout_constraintTop_toTopOf="@+id/pwText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPw"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/explain1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputPw"
            android:layout_marginStart="95dp"
            android:layout_marginTop="25dp"
            android:text="* 영어, 숫자 혼용(8~20자 이내)"
            android:textColor="#EE3131"
            android:textSize="15sp" />
    </RelativeLayout>

    <!-- 비밀번호 확인 -->
    <RelativeLayout
        android:id="@+id/checkRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwRelative">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/checkInputPw"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/checkPw"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/explain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkInputPw"
            android:layout_marginStart="95dp"
            android:layout_marginTop="25dp"
            android:text="* 입력한 비밀번호가 다릅니다."
            android:textColor="#EE3131"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>